<!DOCTYPE html>
<html>
  <head>
    <title>Project2Hair</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <ul class="nav">
      <li><a href="<%= stylists_path %>">Stylists</a></li>
      <li><a href="<%= styles_path %>">Styles</a></li>

      <% if @current_user %>
        <li class="right welcome"> <%= link_to "Welcome #{@current_user.name}", user_path(@current_user) %>!</li>
        <li class="right"><%= link_to "Log Out", logout_path, method: :delete %></li>
      <% elsif @current_stylist %>
        <li class="right welcome"> <%= link_to "Welcome #{@current_stylist.name}", stylist_path(@current_stylist) %>!</li>
        <li class="right"><%= link_to "Log Out", stylist_logout_path, method: :delete %></li>
      <% else %>
        <li class="right"><a href="<%= new_user_path %>">Sign Up!</a></li>
        <li class="right"><a href="<%= new_login_path %>">Login!</a></li>
      <% end %>
    </ul>
    <%= yield %>
  </body>
</html>
