<%= @review.user.name %>'s Review

    <% if flash[:edit_review_errors] %>
        <%    flash[:edit_review_errors].each do |error| %>
                <p style="color:red"><strong><%= error %></strong></p>
        <% end %>
    <% end %>

<p>Edit your review! :) </p>


<%= form_for @review do |f| %>

    <%= f.label :rating %>
    <%= f.number_field :rating %>

    <%= f.label :comment %>
    <%= f.text_area :comment %>

    <%= f.submit %>

<% end  %>